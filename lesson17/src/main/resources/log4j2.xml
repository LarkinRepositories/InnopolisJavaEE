<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <File name="file" fileName="/logs/log4j/log.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m %ex%n</Pattern>
            </PatternLayout>
        </File>
        <File name="file2" fileName="logs/log4j/log2.log">
            <MarkerFilter marker="consoleonly" onMatch="DENY" onMismatch="ACCEPT"/>
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m %ex%n</Pattern>
            </PatternLayout>
        </File>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="%m%n"/>
        </Console>
        <JDBC name ="DATABASE" tablename="logs">
            <ConnectionFactory class="ConnectionManager.ConnectionManagerJdbcImpl" method="getDatabaseConnection" />
            <Column name="date" isEventTimestamp="true" />
            <Column name="log_level" pattern="%level" isUnicode="false" />
            <Column name="message" pattern="%message" isUnicode="false" />
            <Column name="exception" pattern="%ex{full}" isUnicode="false" />
        </JDBC>
    </Appenders>
    <Loggers>
        <Root level="all">
            <AppenderRef ref="file" level="DEBUG"/>
            <AppenderRef ref="stdout" level="INFO"/>
            <AppenderRef ref="DATABASE" level="DEBUG" />
        </Root>
        <Logger name="MainLog" level="info" additivity="false">
            <AppenderRef ref="file2" level="INFO"/>
            <AppenderRef ref="stdout" level="INFO"/>
        </Logger>
    </Loggers>
</Configuration>